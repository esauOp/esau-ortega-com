---
export interface Props {
	hoverType?: 'lift' | 'scale' | 'glow' | 'slide' | 'rotate';
	className?: string;
}

const { hoverType = 'lift', className = '' } = Astro.props;
---

<div class={`hover-animation hover-${hoverType} ${className}`}>
	<slot />
</div>

<style>
	.hover-animation {
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		cursor: pointer;
	}

	/* Efecto de elevación */
	/* .hover-lift:hover {
		transform: translateY(-8px);
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
	} */

	/* Efecto de escala */
	/* .hover-scale:hover {
		transform: scale(1.05);
	} */

	/* Efecto de brillo */
	/* .hover-glow:hover {
		box-shadow: 0 0 20px rgba(59, 130, 246, 0.5);
		transform: translateY(-2px);
	} */

	/* Efecto de deslizamiento */
	.hover-slide:hover {
		transform: translateX(8px);
	}

	/* Efecto de rotación */
	.hover-rotate:hover {
		transform: rotate(5deg) scale(1.02);
	}

	/* Animaciones para botones */
	.hover-animation button {
		transition: all 0.3s ease;
	}

	.hover-animation button:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
	}

	/* Animaciones para iconos sociales */
	.hover-animation .social-icon {
		transition: all 0.3s ease;
	}

	.hover-animation .social-icon:hover {
		transform: translateY(-3px) scale(1.1);
		color: #3b82f6;
	}

	/* Animaciones para tarjetas de proyecto */
	.hover-animation .project-item {
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.hover-animation .project-item:hover {
		transform: translateY(-10px);
		box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
	}

	/* Animaciones para elementos de skills */
	.hover-animation .skill-item {
		transition: all 0.3s ease;
	}

	.hover-animation .skill-item:hover {
		transform: translateY(-5px) scale(1.05);
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		color: white;
	}

	/* Animaciones para estadísticas */
	.hover-animation .stat-item {
		transition: all 0.3s ease;
	}

	.hover-animation .stat-item:hover {
		transform: translateY(-5px);
		background: rgba(59, 130, 246, 0.1);
		border-radius: 12px;
		padding: 1rem;
	}
</style>
